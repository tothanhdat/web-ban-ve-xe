<script>
    //$('#btnDatVe').
    $(document).on('click', '#btnDatVe', function(e) {
        e.preventDefault();
        //let arrBusesNull = [];
        let startPlace = $('#startPlace').val();
        let endPlace = $('#endPlace').val();

        if(!startPlace || !endPlace){
            alert("Vui lòng chọn điểm đi, điểm đến")
        }
        //let dayTime = $('#dayTime').val();
        $.ajax({
            url: `/buses/list-buses`,
            method: 'GET',
            success: resp => {
                let result = resp.data;
                let arrNull = []

                if(!resp.error){
                    if(result && result.length){
                        result.forEach(item => {
                            if(item.startPlace.toString() == startPlace.toString() 
                                && item.endPlace.toString() == endPlace.toString()){
                                return window.location.href = `/buses/chon-ghe?busesID=${item._id}`
                                
                            } else if(item.startPlace.toString() !== startPlace.toString()){
                                arrNull.push(item)
                                if(arrNull.length){
                                    return alert("Không tìm thấy chuyến xe")
                                }
                            }
                        });

                        if(arrNull.length){
                            return alert("Không tìm thấy chuyến xe")
                        }
                    }
                    
                }else{

                    alert("Đặt vé không thành công")
                }
            },
            error: err => console.log({ err })
        });
    })


    
</script>
