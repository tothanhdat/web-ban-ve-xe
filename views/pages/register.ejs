        let district = $('#district').val().trim();
        let CMND = $('#CMND').val().trim();

        console.log({ fullname, email, password, phone, birthDay, province, district, CMND })

        if (email.length < 1 || password.length < 1 || fullname.length < 1) {

			alert('Các trường không được để trống', 'Thông báo')
			
        } else {
            $.ajax({
                url: `/dang-ky`,
                method: 'POST',
                data: {
                    fullname, email, password, phone, birthDay, province, district, CMND
                },
                success: resp => {

                    console.log({ resp })

                    if (!resp.error) {
						      alert("Đăng ký thành công")
                        return window.location.href = `/dang-nhap`;

                    } else {

                        alert('Đăng ký thất bại');
                    }
                },
                error: err => console.log({
                    err
                })
            });
        }
    })
</script>